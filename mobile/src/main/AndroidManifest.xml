<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anyfetch.companion.mobile" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/MobileCompanionTheme" >
        <service
            android:name="com.anyfetch.companion.api.HttpSpiceService"
            android:exported="false" />
        <service
            android:name="com.anyfetch.companion.android.AndroidSpiceService"
            android:exported="false" />

        <activity
            android:name=".AuthActivity"
            android:label="@string/title_activity_auth" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UpcomingEventsActivity"
            android:label="@string/title_activity_upcoming_events"
            android:parentActivityName=".AuthActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anyfetch.companion.mobile.AuthActivity" />

            <!-- TODO: Before Merging delete this Intent Filter -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
